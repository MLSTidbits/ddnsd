#!/bin/bash

set -eo pipefail

case "${1}" in
    configure|upgrade|reinstall )
        if systemctl is-active --quiet ddnsd.service ;
            then systemctl daemon-reload
        else
            echo "No ddns.service was found."
            echo "To re-enable the please rerun the ddns command you used."
        fi

        # Check if the user exists
        if ! getent passwd ddnsd >/dev/null ; then
            useradd --system --no-create-home --shell /usr/sbin/nologin ddnsd
        fi
    ;;

    *)
        echo "postinst called with unknown argument: $1" >&2
        exit 1
    ;;
esac
