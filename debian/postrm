#!/bin/sh

set -e

case "$1" in
    remove|purge|upgrade    )
        [ -d /run/systemd/system ] && {
        systemctl --system daemon-reload >/dev/null || true ; }


        [ -x "/usr/bin/deb-systemd-helper" ] && {
        deb-systemd-helper stop 'ddnsd.service' >/dev/null || true ; }

        [ -x "/usr/bin/deb-systemd-helper" ] && {
        deb-systemd-helper purge 'ddnsd.service' >/dev/null || true
        deb-systemd-helper unmask 'ddnsd.service' >/dev/null || true ; }
    ;;
    failed-upgrade  ) ;;
    *               ) echo "Unsupported option $1" >&2 ; exit 1 ;;
esac

